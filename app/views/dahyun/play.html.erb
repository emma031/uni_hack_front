<!--list-->

<div class="container">
    <% for i in 1..5 %>
    <% arr=["힙합", "발라드", "r%b", "기타", "댄스"]%>
    <div class="row mr-0 ml-0 pl-0">
        <div class="col-1 center"><%=i%></div>
        <div class="col-1 d-flex align-items-center"><img class="small rounded "src="assets/likelion.png"></div>
        <div class="col-6">

            
                 
                <img class="cover" src="images/cover.jpg" alt="">
         
                <div class="player gradient">
         
                    <a class="button gradient" id="play" href="" title=""></a>
                    <a class="button gradient" id="mute" href="" title=""></a>
                 
                        <input type="range" id="seek" value="0" max=""/>
             
                    <a class="button gradient" id="close" href="" title=""></a>
                     
                </div><!-- / player -->
            
        </div> 
        <div class="col-2 center"><%=arr.sample%></div>
        <div class="col-2 center" type="button">조아요</div>
    </div>
    <hr/>
    <%end%>
</div>