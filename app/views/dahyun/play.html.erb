<!--list-->

<div class="container music">
    <% @play.each do |p| %>
    <div class="row mr-0 ml-0 pl-0">
        <div class="col-1 center"><%= p.id %></div>
        <div class="col-1 d-flex align-items-center"> 
            <% if p.image.url %>
                <img class="small rounded " src="<%= p.image.url %>">
            <% else %>
                <img class="small rounded " src="assets/likelion.png">
            <% end %>            
        </div>
        <div class="col-8 "> 
        <li><%= p.title %></li>
        <li>
               <div class="wrapper row mr-0 mt-1 mb-1">
                            <button type="button" class="playButton"></button>
                            <button type="button" class="pauseButton" ></button>
                        <div class="defaultBar d-flex  align-items-center mr-2 ml-3">
                            <div class="progressBar"></div>
                            <div class="progressCircle mb-5"></div>
                        </div>
                            <div class="row ml-3 mt">
                            <span class="mr-1 currentTime">0:00</span> / 
                            <span class="ml-1 fullDuration">0:00</span>
                            </div>  
                </div>
        </li>
        <li class="mb s-font">
            <%= p.group %>
        </li>
        </div> 
        <div class="col-1 center"><%= p.genre %></div>
        <div class="col-1 center" type="button">조아요</div>
    </div>
    <hr/>
    <%end%>
</div>



