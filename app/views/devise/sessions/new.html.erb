<style>
  


.container2{
  width:500px;
  height:auto;
  margin-left:550px;
}

input{
    background-color:white;
    outline: none;
    border: solid 1px rgba(232,93,75,0.5);
    border-radius: 10px;
}
.mt{
  margin-top: 30px;
}

a {
  color: #F55F4C;
  text-decoration: none;
}

a:hover {
     color:#c1200b;
}


h6{
  margin-top:4px;
  margin-bottom:4px;
}

.btn {
  background-color: white;
  border-color: gray;
  padding-top: 50px;
  padding-bottom: 50px;
}
.btn:hover {
  color: #F55F4C;
  background-color:rgba(232,93,75,0.1);
}

.col-1{
  margin-top: 48px;
  padding-left:40px
}

.s{
  width:500px;
}
</style>

<div class="container2 mt-5">
  <h2 class="font-weight-bold maincolor">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   
<div class="row s d-flex align-items-center">
<div class="col-5">
  <div class="field mt ">
    <h6> 이메일을 입력하세요: </h6>
    <%= f.email_field :email, autofocus: true %>
  </div>
  

  <div class="field mt ">
    <h6> 비밀번호를 입력하세요: </h6>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
</div>

<div class="col-4">
<button class="btn mt-4" type="submit">Login</button>
</div>
</div>


  <% if devise_mapping.rememberable? -%>
    <div class="field mt-1">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>


<% end %>

<a href="/users/sign_up">Sign up</a>
</div>